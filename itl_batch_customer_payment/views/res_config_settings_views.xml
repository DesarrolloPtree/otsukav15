<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_sale_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Commission journal</span>
                        <div class="text-muted">
                            Journal to use in sale commissions.
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="itl_commission_journal_id" class="col-lg-3 o_light_label"/>
                                <field name="itl_commission_journal_id"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    
</odoo>