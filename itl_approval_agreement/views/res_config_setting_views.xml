<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.contact.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="agreement_legal.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='agreement_legal']" position="inside">
                <h2>Approvals</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Approval category for agreement</span>
                            <div class="text-muted">
                                Approval category to create when send agreement.
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="itl_agreement_approval_category_id" class="col-lg-3 o_light_label"/>
                                    <field name="itl_agreement_approval_category_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Approval category for agreement template</span>
                            <div class="text-muted">
                                Approval category to create when send agreement template.
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="itl_agreement_tmp_approval_category_id" class="col-lg-3 o_light_label"/>
                                    <field name="itl_agreement_tmp_approval_category_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    
</odoo>